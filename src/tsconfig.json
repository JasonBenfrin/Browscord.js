{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2018","DOM"],
    "rootDir": ".",
    "outDir": "../dist/package",
    "resolveJsonModule": true,
    "sourceMap": false,
    "allowJs": true,
    "declaration": true
  },
  "include": ["*", "package.json"],
  "exclude": ["node_modules", "webpack.config.js"]
}